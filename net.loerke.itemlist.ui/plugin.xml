<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="net.loerke.itemlist.ui.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Overview Perspective"
            class="net.loerke.itemlist.ui.intro.Perspective"
            id="net.loerke.itemlist.ui.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="net.loerke.itemlist.ui.application"
            name="Item List for Tech-Team">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Item List for Tech-Team">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="net.loerke.itemlist.ui.intro">
      </intro>
      <introProductBinding
            introId="net.loerke.itemlist.ui.intro"
            productId="net.loerke.itemlist.ui.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="net.loerke.itemlist.ui.intro"
            content="introContent.xml"
            id="net.loerke.itemlist.ui.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.ui"
            class="net.loerke.itemlist.ui.views.ItemsView"
            id="net.loerke.itemlist.ui.views.ItemsView"
            name="Item List"
            restorable="true">
      </view>
   </extension>

</plugin>
